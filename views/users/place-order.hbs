
  <link rel="stylesheet" href="/stylesheets/place-order.css" type="text/css" />
<section>
  <div class="container" style="margin-top: 120px;">
    <form   id="checkout-form" >
      <div class="row">
        <div style="width: 50%;" class="col-md-6">
          <h1>Enter Delivery Details</h1>

          <div>
            <label for="">Address</label>

            <input type="text" class="form-control" name="Address" />
            <label for="">PinCode</label>

            <input type="tel" name="PinCode" class="form-control" />

            <label for="">Mobile</label>
            <input type="tel" name="Mobile" class="form-control"  />
          </div>
        </div>
        
          <div style="width: 357px; height: 221px; border: solid 1px;padding-top: 18px;"
            class="container ml-5 mt-5 checkout">
            <h5>Total Amount : {{total}}</h5>
            <hr />
            <div class="payment">
              <p>Payment method</p>
              <label class="radio-inline">
                <input type="radio" name="payment-method" value="COD"  checked />
                COD
              </label>
              
              <label  class="radio-inline ">
                <input type="radio" name="payment-method" value="ONLINE" />
                Online payment
              </label>

              <button style="margin-left: 220px;" class="btn btn-primary checkout"> Checkout</button>
            </div>

          </div>
        
      </div>
    </form>
  </div>
</section>

