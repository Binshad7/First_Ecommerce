
<link rel="stylesheet"  href="/stylesheets/signup.css" type="text/css">
<div class="container" id="cont">
    <div class="row mt-5">
        <div id="wid" class="col-md-6">
            <h2 id="txt" >Create Account</h2>
            <form action="/signup" method="post" class="form">
                <label for="name">Name</label>
                <input type="text" name="Name" placeholder="Email" class="form-control">
                <label for="email">Email</label>
                <input type="text" name="Email" placeholder="Email" class="form-control">
                <label for="password">Password</label>
                <input type="password" name="Password" class="form-control"  placeholder="Password">
                <a href="/login" style="text-decoration: none;" class="float-right">Already have account?</a>
                <button type="submit" id="btn" class="btn btn-success">SUBMIT</button>
            </form>
        </div>
    </div>
</div>
